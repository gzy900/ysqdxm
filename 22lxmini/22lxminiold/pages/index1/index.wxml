            <view class="order-user-line"></view>
            <view class="order-user-item">
              <view>性别</view>
              <view>女</view>
            </view>
            <view class="order-user-line"></view>
            <view class="order-user-item">
              <view>身高</view>
              <view>160cm</view>
            </view>
            <view class="order-user-line"></view>
            <view class="order-user-item">
              <view>体重</view>
              <view>48kg</view>
            </view>
            <view class="order-user-line"></view>
            <view class="order-user-item">
              <view>尺码</view>
              <view>xl</view>
