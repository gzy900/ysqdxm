          </view>

          <!--tips-yes-->
          <view class="order-tips tips-no">
            <text>图标 信息不完整未激活</text>
          </view>
        </view>
      </view>

      <view class="order">
        <view class="order-heard">
          <view class="order-heard-title">我的订单</view>
        </view>
        <view class="order-null">
          <image src="/images/nullbg.png" mode="widthFix"></image>
          <text>暂无订单信息</text>
        </view>
      </view>
    </view>

    <view class="app-btn">
      <share-element key="app-btn" transform duration="300">
        <button class="button1" style="background: #FF9C00;">图标下单</button>
      </share-element>
      <view>
        <button class="button1" style="background: #4D73EC;">图标推荐给好友</button>
      </view>
