/* pages/index1/index.wxss */
.userInfo {
  display: flex;
  width: 100%;
  margin-top: 10px;
}

.userInfo>.logo {
  width: 160rpx;
  height: 160rpx;
  flex: none;
  position: relative;
}

.userInfo>.logo>image {
  width: 100%;
  border-radius: 50%;
  overflow: hidden;
}

.userInfo>.info {
  width: 50%;
  flex: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.userInfo>.info>view {
  width: 100%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 14px;
  color: #fff;
  line-height: 22px;
  padding-left: 28rpx;
  margin-bottom: 16rpx;
}

.loadApp {
  width: 100%;
  height: auto;
  padding: 10rpx 40rpx;
  background-color: rgba(255, 255, 255, .5);
  border-radius: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 18px;
}

.loadApp-icon {
  margin-right: 32rpx;
  flex: none;
}

.loadApp .loadApp-txt {
  color: #fff;
  font-size: 14px;
  line-height: 20px;
  flex: auto;
  overflow: hidden;
}

.loadApp-txt view {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.order-list {
  width: 100%;
  height: auto;
  /* overflow: hidden; */
}

.order {
  width: 100%;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
  margin-top: 25px;
}

.order-heard {
  width: 100%;
  height: 70px;
  background-color: #fff;
  padding: 25px 16px;
  line-height: 20px;

  display: flex;
  justify-content: space-between;
}

.order-heard-title {
  font-size: 18px;
  text-align: left;
}

.order-heard-btn {
  font-size: 15px;
  text-align: right;
  flex: none;
}

.order-heard-btn button {
  display: inline;
  height: 20px;
  line-height: 20px;
  padding: 0;
  margin: 0;
  width: auto;
  background-color: transparent;
  font-weight: normal;
}

.order-null {
  width: 100%;
  padding: 0 18px;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
  font-size: 14px;
}

.order-null image {
  width: 60%;
}

.order-null text {
  margin: 20px 0 40px 0;
}

.order-body {
  width: 100%;
  height: auto;
  background-color: #F6F6F6;
}


.order-user {
  overflow: hidden;
  display: flex;
  align-items: center;
}

.order-user-line {
  width: 1px;
  height: 28px;
  background-color: #ccc;
}

.order-user-item {
  flex: auto;
  float: left;
  text-align: center;
  font-size: 15px;
  padding: 12px 0 6px 0;
  width: 20%;
}

.order-user-item view:first-child {
  color: #999;
  font-size: 14px;
  margin-bottom: 10px;
}

.order-info {
  overflow: hidden;
  padding-bottom: 18px;
}

.order-info-item {
  width: 100%;
  margin-top: 18px;
  padding: 0 18px;
  line-height: 20px;

  display: flex;
}

.order-info-item view {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  flex: auto;
}


.order-info-item view:first-child {
  color: #999;
  font-size: 14px;
  margin-right: 15px;
  flex: none;
}

.order-info-item:last-child view {
  white-space: normal;
}

.order-tips {
  width: 100%;
  height: 51px;
  padding: 0 18px;
  line-height: 51px;
}

.order-tips>text {
  width: 100%;
  text-align: center;
  display: inline-block;
  border-top: 1px solid #999;
}

.tips-yes {
  color: #F0A33B;
}

.tips-no {
  color: #999;
}

.app-btn {
  width: 100%;
  height: auto;
  display: flex;
  margin-top: 20px;
  position: fixed;
  bottom: 10px;
  left: 0;
  flex-direction: row;
  justify-content: space-around;
  pointer-events: initial;
}

.app-btn share-element {
  width: 40%;
  flex: none;
}

.app-btn view {
  width: 40%;
  flex: none;

}

.button1 {
  width: 100% !important;
  height: 60px;
  line-height: 60px;
  padding: 0;
  border-radius: 100px;
  color: #fff;
  font-weight: normal;
  font-size: 16px;
}

.page-container {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  overflow: hidden;
}

.swiper {
  width: 100vw;
  height: 100vh;
}

.swiper image {
  width: 100vw;
  height: 100vh;
}

.setup {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  pointer-events: none;
}

.setup-time {
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 100px;
}

.setup-time text {
  display: block;
  text-align: center;
  margin-top: 18px;
  color: #fff;
}

.setup-time-title {
  font-weight: bold;
  font-size: 20px;
}

.setup-time-time {
  font-size: 30px;
}

.setup-time-num {
  font-size: 14px;
}

.vipTip {
  position: absolute;
  right: 0;
  bottom: 0;
}