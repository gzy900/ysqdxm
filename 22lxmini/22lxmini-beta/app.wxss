.tips {
  width: 100%;
  height: 28px;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  text-align: center;
  color: #fff;
  font-size: 16px;
  line-height: 28px;
  overflow: hidden;
}

.tips view {
  width: 100%;
  height: 100%;
  background-color: red;
  transform: translateY(-100%);
  transition: transform 3s;
}

.tips .tipsShow {
  transform: translateY(0);
}

