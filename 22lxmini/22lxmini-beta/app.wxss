view {
  box-sizing: border-box;
}

.bg {
  width: 100%;
  position: absolute;
  top: 0;
  z-index: 1;
}

.pd-28 {
  padding: 0 28rpx;
}

.alert {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .3);
  z-index: 9;
  display: flex;
  align-items: center;
  justify-content: center;
}

.alert-container {
  flex: none;
  width: 90%;
  height: auto;
  overflow: hidden;
  position: relative;
}

.alert-container image {
  width: 100%;
}

.alert-body {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  text-align: center;
  padding-top: 25%;
  padding-bottom: 20px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.alert-body {
  flex: none;
}

.alert-btn {
  width: 100%;
  display: flex;
  justify-content: space-around;
}

.alert-btn button {
  width: 80px !important;
  height: 28px;
  line-height: 26px;
  flex: none;
  text-align: center;
  padding: 0;
  margin: 0;
  font-size: 13px !important;
  border-radius: 30px;
  font-weight: normal;
  background-color: rgba(217, 217, 217, 1);
  box-sizing: border-box;
  border: 1px solid rgba(217, 217, 217, 1);
}

.alert-content {
  flex: auto;
}


